<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root alignment="CENTER" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
         <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
          <children>
             <Label fx:id="treatmentTitleLabel" text="Treatment title">
                <font>
                   <Font size="16.0" />
                </font>
             </Label>
             <Region HBox.hgrow="ALWAYS" />
             <Button mnemonicParsing="false" onAction="#previewTreatment" text="View">
               <font>
                  <Font size="10.0" />
               </font></Button>
          </children>
          <padding>
             <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
       </HBox>
   </children>
</fx:root>
