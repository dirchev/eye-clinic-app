<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="layout" alignment="CENTER" spacing="10.0" styleClass="root" stylesheets="@../../Styles/material-fx.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eyeclinic.Pages.Login.Controller">
   <children>
      <Label alignment="CENTER" styleClass="title-label" text="Login To Eye Clinic" textAlignment="CENTER">
         <font>
            <Font size="31.0" />
         </font>
      </Label>
      <VBox fx:id="errorMessageContainer" alignment="TOP_CENTER" />
      <TextField fx:id="usernameTextField" promptText="Username" />
      <PasswordField fx:id="passwordTextField" promptText="Password" />
      <HBox spacing="10.0">
         <children>
            <Button fx:id="signupButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handleSugnUpButton" styleClass="card-button" text="Sign Up" textAlignment="CENTER" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="loginButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handleLoginButtonSubmit" styleClass="card-button" text="Login" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
   <effect>
      <Glow />
   </effect>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
